{
  "name": "lendsqr-be-test",
  "version": "1.0.0",
  "description": "A wallet system for a lending platform",
  "main": "index.js",
  "engines": {
    "node": "18.16.0"
  },
  "nyc": {
    "include": "src",
    "exclude": [
      "src/tests"
    ]
  },
  "scripts": {
    "start": "node build/src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf ./build && tsc",
    "db:migrate": "yarn run knex migrate:latest",
    "db:undo": "yarn run knex migrate:rollback --all",
    "db:seed": "yarn run knex seed:run",
    "db:reseed": "yarn run db:undo && yarn run db:migrate && yarn run db:seed",
    "db:prod": "yarn run db:migrate && yarn run db:seed",
    "test:run": "nyc --reporter=html --reporter=text mocha --require ts-node/register --require tsconfig-paths/register --exit --recursive './src/tests/**/*.spec.ts'",
    "test:reseed": "cross-env NODE_ENV=test && yarn run db:undo && yarn run db:migrate && yarn run db:seed",
    "test": "yarn run test:reseed && yarn run test:run",
    "env": "sync-dotenv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Johnsonojo/lendsqr-be-test.git"
  },
  "keywords": [
    "lending"
  ],
  "author": "Johnson Ojo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Johnsonojo/lendsqr-be-test/issues"
  },
  "homepage": "https://github.com/Johnsonojo/lendsqr-be-test#readme",
  "dependencies": {
    "@types/knex": "^0.16.1",
    "@types/uuid": "^9.0.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "mysql2": "^3.2.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.1",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "rimraf": "^4.1.2",
    "sync-dotenv": "^2.7.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run env"
    }
  }
}
